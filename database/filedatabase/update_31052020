                         dbo.giataisancong.giathue, dbo.giataisancong.congbo, dbo.giataisancong.lichsu, dbo.giataisancong.ghichu, dbo.giataisancong.thoidiem, dbo.giataisancong.macqcq, dbo.giataisancong.madv, dbo.giataisancong.lydo,
                         dbo.giataisancong.thongtin, dbo.giataisancong.trangthai, dbo.giataisancong.thoidiem_h, dbo.giataisancong.macqcq_h, dbo.giataisancong.madv_h, dbo.giataisancong.lydo_h, dbo.giataisancong.thongtin_h,
                         dbo.giataisancong.trangthai_h, dbo.giataisancong.thoidiem_t, dbo.giataisancong.macqcq_t, dbo.giataisancong.madv_t, dbo.giataisancong.lydo_t, dbo.giataisancong.thongtin_t, dbo.giataisancong.trangthai_t,
